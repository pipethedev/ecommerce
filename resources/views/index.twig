	<script type = "text/javascript">
	const width = screen.width;
	if(width > 800){
		const mySiema  = new Siema({
		  selector: '.siema',
		  duration: 2100,
		  easing: 'ease-out',
		  perPage: 4,
		  startIndex: 0,
		  draggable: true,
		  multipleDrag: true,
		  threshold: 20,
		  loop:true,
		  rtl: true
	  });
		setInterval(() => mySiema.next(), 3500)
}else{
		const mySiema  = new Siema({
		  selector: '.siema',
		  duration: 2100,
		  easing: 'ease-out',
		  perPage: 2,
